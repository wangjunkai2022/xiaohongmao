<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.hcaptcha.sdk.HCaptchaWebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/loadingContainer" android:background="@android:color/white" android:padding="20dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:layout_width="150dp" android:layout_height="wrap_content" android:src="@drawable/ic_hcaptcha_logo" android:adjustViewBounds="true" android:contentDescription="@string/logo_description"/>
        <ProgressBar android:layout_gravity="center" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true"/>
        <TextView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/loading_text"/>
    </LinearLayout>
</RelativeLayout>
