<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:paddingTop="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0" style="@style/ToolBar.Trans">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/toolbar_height">
            <ImageButton android:id="@+id/imgbtn_toolbar_back" android:visibility="gone" android:layout_width="@dimen/toolbar_height" android:layout_height="@dimen/toolbar_height" app:tint="@color/colorSecondaryText" style="@style/ToolBarBackButton"/>
            <TextView android:textSize="18sp" android:textColor="@color/txt_color" android:id="@+id/tv_toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/webview_loading" android:layout_centerInParent="true" android:layout_toEndOf="@+id/imgbtn_toolbar_back"/>
            <ImageButton android:id="@+id/toolbar_refresh" android:background="@color/transparent" android:layout_width="23dp" android:layout_height="23dp" android:src="@drawable/ic_refresh_gray" android:scaleType="fitXY" android:layout_centerVertical="true" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true" app:tint="@color/colorSecondaryText"/>
            <TextView android:textStyle="bold" android:textColor="@color/colorSecondaryText" android:id="@+id/toolbar_close" android:background="?android:attr/selectableItemBackground" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sym_heavy_close" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true" style="@style/ToolBarTitle"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <WebView android:id="@+id/webview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar"/>
    <ProgressBar android:id="@+id/progress_bar" android:padding="0dp" android:layout_width="match_parent" android:layout_height="4dp" android:layout_below="@+id/toolbar" style="?android:attr/progressBarStyleHorizontal"/>
    <com.opensource.svgaplayer.SVGAImageView android:id="@+id/web_svga" android:padding="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/svga_top" android:scaleType="fitCenter" android:layout_below="@+id/toolbar" app:clearsAfterStop="true" app:fillMode="0" app:loopCount="1"/>
    <com.qennnsad.aknkaksd.presentation.ui.room.view.PeerageLoginView android:id="@+id/simple_peerage_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="150dp" android:layout_centerHorizontal="true"/>
</RelativeLayout>
