<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/live_finish_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/hongbao" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/bg" android:background="@drawable/hongbao_bg" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/namecardCopy" android:background="@drawable/hongbao_get" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="70dp" android:layout_alignBottom="@+id/bg" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/close" android:background="@drawable/hongbao_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_alignRight="@+id/bg" android:layout_centerHorizontal="true"/>
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/hongbao_head" android:layout_width="@dimen/user_photo_size" android:layout_height="@dimen/user_photo_size" android:layout_below="@+id/close" android:layout_centerHorizontal="true" app:roundAsCircle="true"/>
        <TextView android:textSize="20dp" android:textColor="@color/white" android:id="@+id/hongbao_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="" android:layout_below="@+id/hongbao_head" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16dp" android:textColor="@color/white_trans_80" android:id="@+id/hongbao_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/room_live_redpacket_title" android:layout_below="@+id/hongbao_name" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
