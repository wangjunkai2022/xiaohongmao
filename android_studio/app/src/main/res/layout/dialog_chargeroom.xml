<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/dialog_chargeroom_rootlayout" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
