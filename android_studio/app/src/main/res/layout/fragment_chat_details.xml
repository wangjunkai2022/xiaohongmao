<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/toolbar" layout="@layout/layout_toolbar_chat_details"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/clMain" android:background="@drawable/background_chat_details_repeat" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/chatDetailsList" android:paddingTop="16dp" android:paddingBottom="16dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/bottomLayout" app:layout_constraintTop_toBottomOf="@+id/lPinnedMessage"/>
        <androidx.cardview.widget.CardView android:id="@+id/playerContainer" android:visibility="gone" android:layout_width="200dp" android:layout_height="200dp" android:layout_margin="20dp" android:elevation="0dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/audioPlayLayout">
            <com.google.android.exoplayer2.ui.PlayerView android:id="@+id/playerView" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" app:resize_mode="4" app:show_buffering="2" app:use_controller="false"/>
            <ImageView android:layout_gravity="end|top" android:id="@+id/fullscreenIcon" android:background="#80000000" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_baseline_fullscreen_24" app:tint="@color/white"/>
            <ImageView android:layout_gravity="center" android:id="@+id/playIcon" android:background="@drawable/bg_circle" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/exo_icon_play"/>
        </androidx.cardview.widget.CardView>
        <TextView android:textSize="@dimen/text_normal" android:textColor="@color/md_grey_500" android:id="@+id/emptyChatText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/chats_list_item_margin" android:text="@string/empty_chat_placeholder" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <com.im.freechat.ui.widget.ChatDetailsAudioPlayLayout android:id="@+id/audioPlayLayout" android:background="@color/md_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:translationZ="1dp" android:elevation="1dp" app:layout_constraintTop_toTopOf="0"/>
        <include android:id="@+id/lPinnedMessage" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/audioPlayLayout" layout="@layout/fragment_chat_details_pinned_message"/>
        <TextView android:textSize="@dimen/text_small" android:textColor="@color/im_me_message_bubble" android:layout_gravity="center" android:id="@+id/tvDayAndMonth" android:background="@drawable/background_chat_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:paddingStart="8dp" android:paddingEnd="8dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/lPinnedMessage"/>
        <com.im.freechat.ui.widget.ChatDetailsDownLayout android:id="@+id/layoutDown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_marginEnd="14dp" app:layout_constraintBottom_toTopOf="@+id/bottomLayout" app:layout_constraintEnd_toEndOf="0"/>
        <include android:id="@+id/bottomLayout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" layout="@layout/layout_chat_details_bottom"/>
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@+id/bottomLayout">
            <FrameLayout android:id="@+id/mentioningContainer" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="100dp" app:behavior_hideable="true" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.im.freechat.ui.widget.ChatDetailsAudioRecordLayout android:id="@+id/audioRecordLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@+id/bottomLayout"/>
        <RelativeLayout android:id="@+id/searchStatusLayout" android:background="@color/md_grey_100" android:focusableInTouchMode="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp" android:paddingStart="@dimen/activity_padding" android:paddingEnd="@dimen/activity_padding" app:layout_constraintBottom_toBottomOf="0">
            <ImageView android:id="@+id/decor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_search" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/activity_padding" android:layout_alignParentStart="true"/>
            <TextView android:id="@+id/tvSearchResultsCounter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@+id/decor"/>
            <ImageView android:id="@+id/ivSearchUp" android:visibility="invisible" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/back_arrow" android:layout_centerVertical="true" android:rotation="90" android:layout_marginEnd="@dimen/activity_padding" android:layout_toStartOf="@+id/ivSearchDown" app:tint="@color/md_black"/>
            <ImageView android:id="@+id/ivSearchDown" android:visibility="invisible" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/back_arrow" android:layout_centerVertical="true" android:rotation="-90" android:layout_marginStart="@dimen/activity_padding" android:layout_alignParentEnd="true" app:tint="@color/md_black"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cameraPreviewContainer" android:background="#40000000" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.cardview.widget.CardView android:id="@+id/cameraCont" android:layout_width="200dp" android:layout_height="200dp" android:layout_margin="30dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0"/>
            <ImageView android:id="@+id/btnRecordVideo" android:background="@drawable/bg_circle" android:padding="10dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="12dp" android:src="@drawable/bg_circle" android:elevation="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:tint="#ff0000"/>
            <ImageView android:id="@+id/btnSendVideo" android:background="@drawable/bg_circle" android:visibility="invisible" android:layout_width="36dp" android:layout_height="36dp" android:layout_margin="12dp" android:src="@drawable/ic_im_send" android:paddingStart="10dp" android:paddingEnd="8dp" android:elevation="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0"/>
            <ImageView android:id="@+id/btnCancelVideo" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginBottom="182dp" android:src="@drawable/ic_close" android:layout_marginEnd="12dp" android:elevation="12dp" app:layout_constraintBottom_toBottomOf="@+id/cameraCont" app:layout_constraintEnd_toEndOf="0"/>
            <ImageView android:id="@+id/btnRotateCamera" android:background="@drawable/bg_circle" android:padding="4dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginBottom="12dp" android:src="@drawable/ic_rotate_left_black_24dp" android:layout_marginEnd="182dp" android:elevation="12dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="@+id/cameraCont"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout android:id="@+id/flLoading" android:background="#80ffffff" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout android:id="@+id/flEmojiAndMore" android:visibility="gone" android:layout_width="match_parent" android:layout_height="320dp" android:minHeight="220dp" app:layout_constraintBottom_toBottomOf="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
