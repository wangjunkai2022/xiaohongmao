<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="@color/imPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="0" app:theme="@style/AppTheme.AppBarOverlay"/>
    <LinearLayout android:gravity="center" android:id="@+id/llGroupName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_activity_margin" android:layout_marginStart="@dimen/default_activity_margin" app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <FrameLayout android:layout_width="60dp" android:layout_height="60dp">
            <TextView android:textSize="@dimen/text_large" android:textStyle="bold" android:textColor="@color/md_white" android:gravity="center" android:id="@+id/tvGroupAvatar" android:background="@drawable/shape_item_chat_name" android:layout_width="60dp" android:layout_height="60dp" android:textAllCaps="true"/>
            <ImageView android:id="@+id/ivAvatar" android:layout_width="60dp" android:layout_height="60dp"/>
            <ImageView android:layout_gravity="end|bottom" android:background="@drawable/shape_item_chat_name" android:padding="4dp" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_im_edit" android:scaleType="fitCenter" android:backgroundTint="@color/imAccent"/>
        </FrameLayout>
        <EditText android:id="@+id/etConvName" android:background="@null" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/hint_chat_name" android:maxLines="1" android:inputType="textNoSuggestions" android:imeOptions="actionDone" android:paddingEnd="8dp" android:layout_marginStart="@dimen/default_activity_margin"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progress" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <View android:id="@+id/vDivider" android:layout_marginTop="@dimen/default_activity_margin" android:layout_marginBottom="@dimen/default_activity_margin" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/llGroupName" style="@style/Divider.Bold"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvMembers" android:layout_width="match_parent" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/vDivider"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/createFab" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="40dp" android:src="@drawable/ic_check" android:layout_alignParentBottom="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:rippleColor="@color/md_blue_100"/>
</androidx.constraintlayout.widget.ConstraintLayout>
