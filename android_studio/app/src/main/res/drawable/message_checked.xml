<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/im_checkbox_outline"/>
                    <size android:height="@dimen/message_checkbox_size" android:width="@dimen/message_checkbox_size"/>
                </shape>
            </item>
            <item android:height="2dp" android:width="7dp" android:left="4.5dp" android:top="14dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <corners android:radius="1dp"/>
                        <solid android:color="@color/im_checkbox_line"/>
                    </shape>
                </rotate>
            </item>
            <item android:height="2dp" android:width="12dp" android:left="7.5dp" android:top="12dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <corners android:radius="1dp"/>
                        <solid android:color="@color/im_checkbox_line"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>
