<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffe589" android:endColor="#fff8cb" android:angle="90"/>
            <size android:height="20dp" android:width="60dp"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/color_accent_dark" android:endColor="@color/color_accent" android:angle="90"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
