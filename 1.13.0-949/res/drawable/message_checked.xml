<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1.0dip" android:color="@color/im_checkbox_outline" />
                    <size android:height="@dimen/message_checkbox_size" android:width="@dimen/message_checkbox_size" />
                </shape>
            </item>
            <item android:height="2.0dip" android:width="7.0dip" android:left="4.5dip" android:top="14.0dip">
                <rotate android:fromDegrees="45.0">
                    <shape android:shape="rectangle">
                        <corners android:radius="1.0dip" />
                        <solid android:color="@color/im_checkbox_line" />
                    </shape>
                </rotate>
            </item>
            <item android:height="2.0dip" android:width="12.0dip" android:left="7.5dip" android:top="12.0dip">
                <rotate android:fromDegrees="-45.0">
                    <shape android:shape="rectangle">
                        <corners android:radius="1.0dip" />
                        <solid android:color="@color/im_checkbox_line" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>