        <shape android:shape="oval">
            <size android:height="25.0dip" android:width="25.0dip" />
            <solid android:color="@color/white" />
            <stroke android:width="3.0dip" android:color="@color/color_accent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="25.0dip" android:width="25.0dip" />
            <solid android:color="@color/white" />
